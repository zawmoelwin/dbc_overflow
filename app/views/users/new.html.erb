<h1>Sign Up</h1>
<form id="sign-up" method="post" action="/users">
  <p>
    <label for="user_name">User Name:</label>
    <input type="text" name="user[user_name]" value="<%= @user.try(:user_name) %>">
  </p>
  <p>
    <label for="Email">Email:</label>
    <input type="text" name="user[email]" value="<%= @user.try(:email) %>">
  </p>
  <p>
    <label for="password">Password:</label>
    <input type="password" name="user[password]" value="<%= @user.try(:password) %>">
  </p>
  <!-- BUTTON -->
  <input type="submit" value="Sign Up" class="button">
</form>